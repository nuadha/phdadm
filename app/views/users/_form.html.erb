<div class="create_user_form">

	<%= form_for(@user) do |f| %>
	  <% if @user.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
	
	      <ul>
	      <% @user.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	  
	  <fieldset>
	  	<legend>Please Enter User Details</legend>
	  
	  	
	  <div class="field">
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </div>
	  
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </div>
	  
	  <div class="dropdownmenu">
	  	<%= f.label :role %><br />
  		<%= f.collection_select :role_id, Role.all, :id, :role_name, :prompt => 'Select Role' %>
  	  </div>
  	  <br />
      <div class="dropdownmenu">
	  	<%= f.label :supervisor %><br />
  		<%= f.collection_select :supervisor, User.where(:role_id => 2), :id, :name, :prompt => 'Select Supervisor' %>
  	  </div>
	  <br />
	  <div class="field">
	    <%= f.label :password, 'Password' %><br />
	    <%= f.password_field :password %>
	  </div>
	  
	  <div class="field">
	  	<%= f.label :password_confirmation, 'Confirm Password' %><br />
	  	<%= f.password_field :password_confirmation %>
	  </div>
	  
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	  
	  </fieldset>
	<% end %>
</div>