<%= form_for(@supervisor_progress_declaration) do |f| %>
  <% if @supervisor_progress_declaration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@supervisor_progress_declaration.errors.count, "error") %> prohibited this supervisor_progress_declaration from being saved:</h2>

      <ul>
      <% @supervisor_progress_declaration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :scientific_progress %><br />
    <%= f.check_box :scientific_progress %>
