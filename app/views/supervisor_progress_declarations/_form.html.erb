  	<br /><br />
  </div>
  <div class="dropdownmenu" id="supervisor">
	<%= f.label :supervisor %><br />
  	<%= f.collection_select :supervisor_id, @supervisors, :id, :name, :prompt => 'Select Supervisor' %>
